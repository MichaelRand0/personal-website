{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "$components/*": ["./src/components/*"],
      "$modules/*": ["./src/modules/*"],
      "$styles/*": ["./styles/*"],
      "$icons/*": ["./src/icons/*"],
      "$redux/*": ["./src/redux/*"],
      "$models/*": ["./src/models/*"],
      "$hooks/*": ["./src/hooks/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
